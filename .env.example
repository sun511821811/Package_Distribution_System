# MySQL 配置
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=package_admin
MYSQL_PASSWORD=your_strong_password
MYSQL_DB=package_system

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Cloudflare R2 配置
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=your_r2_bucket
R2_REGION=auto
R2_ENDPOINT_URL=https://<accountid>.r2.cloudflarestorage.com
ORIGINAL_PACKAGE_PREFIX=original/
PROCESSED_PACKAGE_PREFIX=processed/

# Cloudflare CDN 配置
CDN_DOMAIN=dl.yourdomain.com
FIXED_TAG=release

# 系统配置
API_KEY=your_api_key
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password
MAX_PACKAGE_SIZE=21474836480
SECRET_KEY=your_secret_key_for_jwt

# 告警配置（可选）
DINGTALK_WEBHOOK=
EMAIL_SMTP_HOST=smtp.yourdomain.com
EMAIL_SMTP_PORT=465
EMAIL_USER=alert@yourdomain.com
EMAIL_PASSWORD=your_email_password
